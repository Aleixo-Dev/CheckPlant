<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".presentation.add_plant.AddPlantFragment">

    <EditText
        android:id="@+id/input_year"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/background_plant_text"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:hint="12"
        android:inputType="textShortMessage|number|textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/input_month"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/input_month"
        app:layout_constraintVertical_bias="0.0" />

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar_curved"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="@dimen/image_add_width"
        android:layout_height="@dimen/image_add_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/light_green"
        app:cardCornerRadius="60dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/add_img_plant"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/input_plant_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_plant_text"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:hint="Begônia"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/rajdhani_bold"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_container" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rajdhani_bold"
        android:text="Description"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/input_plant_name"
        app:layout_constraintTop_toBottomOf="@+id/input_plant_name" />

    <EditText
        android:id="@+id/input_description_plant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_plant_text"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:gravity="start|top"
        android:hint="Orquídeas são todas as plantas que compõem a família Orchidaceae"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/input_plant_name"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_add_plant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/light_green"
        android:text="@string/add_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rajdhani_bold"
        android:text="@string/day_and_month"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/input_description_plant"
        app:layout_constraintTop_toBottomOf="@+id/input_description_plant" />

    <EditText
        android:id="@+id/input_month"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/background_plant_text"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:hint="11"
        android:inputType="textShortMessage|number|textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rajdhani_bold"
        android:text="/"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/input_month"
        app:layout_constraintStart_toEndOf="@+id/input_month"
        app:layout_constraintTop_toTopOf="@+id/input_month" />
</androidx.constraintlayout.widget.ConstraintLayout>